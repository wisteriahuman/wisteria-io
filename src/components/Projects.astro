  <div class="max-w-5xl mx-auto space-y-8">
    <h2 class="text-3xl font-bold text-white">Projects</h2>
    <div class="space-y-6">
      {projects.map(p => (
        <div class="bg-bg-card rounded-xl p-6 hover:bg-bg-card-hover transition-colors">
          <div class="flex items-start justify-between mb-2">
            <h3 class="text-white font-semibold text-lg">{p.title}</h3>
